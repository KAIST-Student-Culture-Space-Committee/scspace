{
  "name": "scspace-monorepo",
  "private": true,
  "version": "1.0.0",
  "repository": "",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "dotenv -e .env -- pnpm -r --stream --parallel run start",
    "dev": "dotenv -e .env -- pnpm -r --stream --parallel dev",
    "build": "dotenv -e .env -- pnpm -r --stream --parallel run build",
    "docker:infra:up": "docker compose --env-file .env -f infra/compose/docker-compose.infra.yml up -d --build",
    "docker:infra:down": "docker compose --env-file .env -f infra/compose/docker-compose.infra.yml down",
    "docker:infra:clear": "docker compose --env-file .env -f infra/compose/docker-compose.infra.yml down -v",
    "docker:network:init": "docker network inspect scspace-internal-network >/dev/null 2>&1 || docker network create scspace-internal-network; docker network inspect scspace-infra-network >/dev/null 2>&1 || docker network create scspace-infra-network",
    "docker:server:up": "docker compose --env-file .env -f infra/compose/docker-compose.server.yml up -d --build",
    "docker:server:down": "docker compose --env-file .env -f infra/compose/docker-compose.server.yml down",
    "docker:client:up": "docker compose --env-file .env -f infra/compose/docker-compose.client.yml up -d --build",
    "docker:client:down": "docker compose --env-file .env -f infra/compose/docker-compose.client.yml down",
    "docker:edge:up": "docker compose --env-file .env -f infra/compose/docker-compose.edge.yml up -d --build",
    "docker:edge:down": "docker compose --env-file .env -f infra/compose/docker-compose.edge.yml down",
    "docker:dev:up": "docker compose --env-file .env -f infra/compose/docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose --env-file .env -f infra/compose/docker-compose.dev.yml down",
    "docker:dev:clear": "docker compose --env-file .env -f infra/compose/docker-compose.dev.yml down -v",
    "docker:stack:up": "docker compose --env-file .env -f infra/compose/docker-compose.stack.yml up -d --build",
    "docker:stack:down": "docker compose --env-file .env -f infra/compose/docker-compose.stack.yml down",
    "migrate": "drizzle-kit migrate --config packages/server/src/db/drizzle.config.ts",
    "generate": "drizzle-kit generate --config packages/server/src/db/drizzle.config.ts",
    "push": "drizzle-kit push --config packages/server/src/db/drizzle.config.ts"
  },
